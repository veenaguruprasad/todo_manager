<h1 class="heading">My Todo-list</h1>

<%= form_with(url: "/todos", method: "post", class: "input-section") do %>
  <input class="todo-text-input" type="text" name="todo_text" id="todo_text" placeholder="What's next?">
  <input class="due-date-input" type="date" name="due_date" id="due_date">
  <button class="add-btn" type="submit">Add</button>
<% end %>

<section class="todo-items">
  <%= render partial: "todo-section", locals: {
    section_title: "Overdue",
    todos: Todo.overdue,
    show_due_date: true
  } %>

  <%= render partial: "todo-section", locals: {
    section_title: "Due Today",
    todos: Todo.due_today,
    show_due_date: false
  } %>

  <%= render partial: "todo-section", locals: {
    section_title: "Due Later",
    todos: Todo.due_later,
    show_due_date: true
  } %>
</section>
